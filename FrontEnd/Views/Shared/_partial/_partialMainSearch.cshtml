@{
    Models.Webconfig commonInfo = new Models.Webconfig();
    string currentUrl = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
    if (ViewData["CommonData"] != null)
    {
        commonInfo = (Models.Webconfig)ViewData["CommonData"];
    }
}
<style>
    .dtc {
        display: none;
    }

    #location-content {
        overflow-y: scroll;
        max-height: 350px;
    }

    .txt-search {
        width: 100%;
        height: 100%;
    }
</style>
<div class="filter-wrap filter-banner container-fluid" style="position:relative;z-index:1;">
    <div class="filter row">
        <div class="filter-form col-12">
            <div class="form-search form-group">
                <div class="form-search-filter font-weight-bold">
                    <div class="dropdown-custom dropdown-md" id="select-Advantage">
                        <div class="dropdown-custom-control input-group">
                            <div class="dropdown-custom-control-title"><span class="hidden-mobile">Post type</span></div>
                        </div>
                        <ul class="dropdown-custom-menu ">
                            @foreach (var item in commonInfo.ProductCategoryList)
                            {
                                <li class="dropdown-custom-item close-others">
                                    <label>
                                        <input type="radio" name="CategoryId" value="@item.Id" /> @item.Name
                                    </label>
                                </li>
                                foreach (var subItem in item.ChildCategory)
                                {
                                    <li class="dropdown-custom-item close-others">
                                        <label class="form-check">
                                            <input type="radio" name="CategoryId" value="@subItem.Id" /> @subItem.Name
                                        </label>
                                    </li>
                                }
                            }
                            <li class="dropdown-custom-item">
                                <button type="button" class="button button-type01 text-transform" id="btn-closeAdvantage">Done</button>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="form-search-input">
                    <meta itemprop="target" content="@currentUrl/search?keyword={keyword}">
                    <input type="text" class="form-control" name="keyword" itemprop="query-input" aria-label="Tìm kiếm">
                </div>
                <div class="form-search-button">
                    <button type="button" class="btn btn-primary font-weight-bold" id="btn-search"><span class="hidden-mobile">Search</span></button>
                </div>
            </div>
        </div>

        <div class="filter-item col-12">
            <div class="filter-item-wrap">
                <div class="filter-item-left">
                    <div class="form-group">
                        <div class="dropdown-custom  dropdown-md" id="location-wapper">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title" style="padding:0px;"><input placeholder="Location" id="txt-location" class="txt-search" /></div>
                            </div>
                            <ul class="dropdown-custom-menu font-weight-bold" id="location-content">
                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dropdown-custom">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title" id="price-lb">Price</div>
                            </div>
                            <ul class="dropdown-custom-menu" id="ddl-price">
                                <li class="dropdown-custom-item" data-value="1">&lt; 3 Million</li>
                                <li class="dropdown-custom-item" data-value="2">3 - 5 Million</li>
                                <li class="dropdown-custom-item" data-value="3">5 - 10 Million</li>
                                <li class="dropdown-custom-item" data-value="4">10 - 40 Million</li>
                                <li class="dropdown-custom-item" data-value="5">40 - 70 Million</li>
                                <li class="dropdown-custom-item" data-value="6">70 - 500 Million</li>
                                <li class="dropdown-custom-item" data-value="7">500 - 800 Million</li>
                                <li class="dropdown-custom-item" data-value="8">800M - 1 Billion </li>
                                <li class="dropdown-custom-item" data-value="9">1 - 2 Billion </li>
                                <li class="dropdown-custom-item" data-value="10">2 - 3 Billion </li>
                                <li class="dropdown-custom-item" data-value="11">3 - 5 Billion </li>
                                <li class="dropdown-custom-item" data-value="12">5 - 7 Billion </li>
                                <li class="dropdown-custom-item" data-value="13">7 - 10 Billion </li>
                                <li class="dropdown-custom-item" data-value="14">10 - 20 Billion </li>
                                <li class="dropdown-custom-item" data-value="15">&gt; 20 Billion</li>

                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dropdown-custom">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title" id="area-lb">Area</div>
                            </div>
                            <ul class="dropdown-custom-menu" id="ddl-area">
                                <li data-value="1" class="dropdown-custom-item">&lt;= 30 m<sup>2</sup></li>
                                <li data-value="2" class="dropdown-custom-item">30 - 50 m<sup>2</sup></li>
                                <li data-value="3" class="dropdown-custom-item">50 - 80 m<sup>2</sup></li>
                                <li data-value="4" class="dropdown-custom-item">80 - 100 m<sup>2</sup></li>
                                <li data-value="5" class="dropdown-custom-item">100 - 150 m<sup>2</sup></li>
                                <li data-value="6" class="dropdown-custom-item">150 - 200 m<sup>2</sup></li>
                                <li data-value="7" class="dropdown-custom-item">200 - 250 m<sup>2</sup></li>
                                <li data-value="8" class="dropdown-custom-item">250 - 300 m<sup>2</sup></li>
                                <li data-value="9" class="dropdown-custom-item">&gt;=  300 m<sup>2</sup></li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dropdown-custom" id="project-wapper">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title" id="project-lb" style="padding:0px;">
                                    <input placeholder="Project" class="txt-search" id="txt-project" />
                                </div>
                            </div>
                            <ul class="dropdown-custom-menu" id="ddl-project">
                                @foreach (var item in commonInfo.ProductGroupList)
                                {
                                    <li class="dropdown-custom-item project-item" data-id="@item.Id">@item.Name</li>

                                }
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="filter-item-right">
                    <a href="javascript:void(0)" class="btn btn-filter btn-filter-expand">More</a>
                    <button id="clear-btn" class="btn btn-filter" style="float:right;">Clear</button>
                </div>
            </div>
        </div>
        <div class="filter-item col-12 filter-hidden">
            <div class="filter-item-wrap">
                <div class="filter-item-left">
                    <div class="form-group">
                        <div class="dropdown-custom" id="Orientation">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title lb">Orientation</div>
                            </div>
                            <ul class="dropdown-custom-menu">
                                <li class="dropdown-custom-item" data-id="1">East</li>
                                <li class="dropdown-custom-item" data-id="2">West</li>
                                <li class="dropdown-custom-item" data-id="3">South</li>
                                <li class="dropdown-custom-item" data-id="4">North</li>
                                <li class="dropdown-custom-item" data-id="5">Northeast</li>
                                <li class="dropdown-custom-item" data-id="6">Northwest</li>
                                <li class="dropdown-custom-item" data-id="7">Southwest</li>
                                <li class="dropdown-custom-item" data-id="8">Southeast</li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dropdown-custom" id="NumberOfFloors">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title lb">Number of floors</div>
                            </div>
                            <ul class="dropdown-custom-menu">
                                <li class="dropdown-custom-item" data-id="1">1+</li>
                                <li class="dropdown-custom-item" data-id="2">2+</li>
                                <li class="dropdown-custom-item" data-id="3">3+</li>
                                <li class="dropdown-custom-item" data-id="4">4+</li>
                                <li class="dropdown-custom-item" data-id="5">5+</li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dropdown-custom" id="NumberBedRoom">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title lb">Number of bed room</div>
                            </div>
                            <ul class="dropdown-custom-menu">
                                <li class="dropdown-custom-item" data-id="1">1+</li>
                                <li class="dropdown-custom-item" data-id="2">2+</li>
                                <li class="dropdown-custom-item" data-id="3">3+</li>
                                <li class="dropdown-custom-item" data-id="4">4+</li>
                                <li class="dropdown-custom-item" data-id="5">5+</li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="dropdown-custom dropdown-md">
                            <div class="dropdown-custom-control input-group">
                                <div class="dropdown-custom-control-title">Advantage/Amenities</div>
                            </div>
                            <ul class="dropdown-custom-menu">

                                <li class="dropdown-custom-item close-others font-weight-bold">
                                    <label>item.Name</label>
                                </li>
                                <li class="dropdown-custom-item close-others">
                                    <label class="form-check">
                                        <input type="checkbox" value="chidItem.Id" name="AdvantageFilter"> chidItem.Values
                                    </label>
                                </li>

                                <li class="dropdown-custom-item close-others font-weight-bold">
                                    <label>item.Name</label>
                                </li>
                                <li class="dropdown-custom-item close-others">
                                    <label class="form-check">
                                        <input type="checkbox" value="chidItem.Id" name="AdvantageFilter"> chidItem.Values
                                    </label>
                                </li>
                                <li class="dropdown-custom-item close-others">
                                    <label class="form-check">
                                        <input type="checkbox" value="chidItem.Id" name="AdvantageFilter"> chidItem.Values
                                    </label>
                                </li>
                                <li class="dropdown-custom-item close-others">
                                    <label class="form-check">
                                        <input type="checkbox" value="chidItem.Id" name="AdvantageFilter"> chidItem.Values
                                    </label>
                                </li>
                                <li class="dropdown-custom-item close-others">
                                    <label class="form-check">
                                        <input type="checkbox" value="chidItem.Id" name="AdvantageFilter"> chidItem.Values
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
             
            </div>
        </div>
    </div>
</div>