
@{
    ViewBag.Title = "ForgetPassword";
}
<div class="box-page-profile">
    <div class="container">
        <div class="main-page-profile row">
            <div class="col-sm-12 col-md-12 col-lg-12 left-profile">
                <div class="main-left-profile">
                    <div class="item-profile">
                        <h4 class="title title-3">Change password</h4>
                        <div class="row form-group">
                            <div class="col-sm-5 text-right">
                                <label class="txt-lable txt-lable-1">Register email<span class="color-main">*</span></label>
                            </div>
                            <div class="col-sm-7">
                                <input type="text" placeholder="" class="input-form" id="txt-email" autocomplete="off">
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-sm-5 text-right">

                            </div>
                            <div class="col-sm-7">
                                <div style="margin-top:15px;" class="g-recaptcha-register" name="g-recaptcha-register" id="g-recaptcha-register"></div>
                            </div>
                        </div>
                        <div class="row form-group change-password">
                            <div class="col-md-5 text-right">
                            </div>
                            <div class="col-md-7">
                                <button style="display:none;" id="btn-changePassword" class="button button-type01 text-transform">Send active link to register email</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            setTimeout(function () {
             var _recapcha_key = "@FrontEnd.Controllers.AppConfig.googleCapchaSitekey";
            googleCatchaReset = grecaptcha.render('g-recaptcha-register', {
                'sitekey': _recapcha_key,
                'theme': 'light',
                'hl': 'en'
            });

                $("#btn-changePassword").show();
                $("#btn-changePassword").click(function () {
                    var _email = $("#txt-email").val();
                    var recapchaResponse = grecaptcha.getResponse(googleCatchaReset);
                    $.ajax({
                        url: "/account/ForgetPasswords",
                        type: "post",
                        data: { mail: _email, captcha: recapchaResponse, __RequestVerificationToken: $("input[name=__RequestVerificationToken]").val() },
                        success: function (data) {
                            Common.showNotice(data.code, data.Messenger);
                            grecaptcha.reset();
                            $("#changepassModal .modal-body").html(data.Messenger);
                            $("#changepassModal").modal("show");
                            if (data.code == 200) {
                                $("#changepassModal .modal-body").addClass("text-success");
                            }
                        }
                    });
                });
            }, 1000);
        });
    </script>
}
<div class="modal" tabindex="-1" role="dialog" id="changepassModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
