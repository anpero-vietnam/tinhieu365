<div id="findaddress" class="form-horizontal ">
    <div class="row">
        <div class="col-md-12">
            <div class="form-grourop"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"><label id="pr-name"></label></div>
        <div class="col-md-12 table-scrollable" id="seriaContent">

        </div>
    </div>
</div>
<script src="~/Scripts/Modul/Seria-Control.js"></script>
<script src="~/Scripts/Modul/Search-Product-Dropdow.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Seria.initGetlist(1);
        SearchProductDropdown.init(function (id) {
            Seria.bindSeria(1);
        });
    });

</script>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Cập nhật seria</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Thời gian bảo hành</label>
                        <input class="form-control" type="text" id="wr"/>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group" style="margin-top:15px;">
                        <label>Kiểu seria</label>
                        <div class="mt-radio-list">
                            <label class="mt-radio mt-radio-outline">
                                Seria chỉ sử dụng 1 lần
                                <input type="radio" value="1" name="seriaType">
                                <span></span>
                            </label>
                            <label class="mt-radio mt-radio-outline">
                                Seria có thể sử dụng nhiều lần cho nhiều đơn hàng
                                <input type="radio" value="0" name="seriaType">
                                <span></span>
                            </label>

                        </div>
                    </div>

                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Phạm vi kích hoạt</label>
                        <div class="mt-radio-list">
                            <label class="mt-radio mt-radio-outline">
                                Cho phép khách hàng, đại lý đăng ký bảo hành online
                                <input type="radio" value="0" name="policyType">
                                <span></span>
                            </label>
                            <label class="mt-radio mt-radio-outline">
                                Chỉ admin có thể tìm kiếm, thêm phiếu bảo hành
                                <input type="radio" value="1" name="policyType">
                                <span></span>
                            </label>

                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btn-update-seria">Cập nhật</button>
            </div>
        </div>
    </div>
</div>