@{
    ViewBag.Title = "danh sách quản trị";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}
@model List<Models.UserInStore>

@Html.Partial("_partial/userPartial/_partial_usersmenu")

@if (Model != null)
{
    <div class="table-scrollable" id="lb1">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Thumb</th>
                    <th>Tên đăng nhập</th>
                    
                    <th>Ngày đăng nhập</th>
                    
                    <th>Quền hạn</th>
                    <th></th>
                    <th>phân quyền</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td class="avat">
                        @if (!item.Avatar.Equals(@"/images/nothumb.jpg") && !item.Avatar.Equals(@"/images/noimages.jpg"))
                        {
                            <a href="@item.Avatar">
                                <img src="@item.Thumb" />
                            </a>
                        }
                    </td>
                    <td>@item.UserName</td>
                    <td>
                        @(item.LastVisit.HasValue?item.LastVisit.Value.ToString("dd/MM/yyyy hh:mm"):string.Empty)
                    </td>
                    <td>@*@item.Role*@</td>
                    <td></td>
                    <td><a href="/account/addusertorole?userName=@item.UserId">Phân quền</a></td>
                </tr>
            }

        </table>
    </div>
}
else
{
    <div id="message-warning" class="message message-warning">
        <div class="image">
            <img src="/images/icons/warning.png" alt="Warning" height="32">
        </div>
        <div class="text">
            <h6>Quản trị người dùng</h6>
            <span>Không có người dùng nào.</span>
        </div>
        <div class="dismiss">
            <a href="#message-warning"></a>
        </div>
    </div>
}

@Html.Raw(ViewBag.page)