            <p>
                <a href="http://anpero.com" id="register-btn" class="uppercase">Trang chủ</a>
            </p>
        </div>
  
</div>
<script src="~/Scripts/webScipt.js"></script>
<script>
    var googleCatcha;
    $(document).ready(function () {
        $("#register-back-btn").click(function () {
            window.location.href = "/"
        });

        googleCatcha = grecaptcha.render('g-recaptcha', {
            'sitekey': '@System.Configuration.ConfigurationManager.AppSettings["googleCapchaSitekey"]',
            'theme': 'light',
            'hl': 'vi'
        });
    

    })
    function checkForm() {
        var valid = true;
        var captchaResponse = grecaptcha.getResponse(googleCatcha);
        $("#captcha").val(captchaResponse);
  
        if ($("#Password").val() != $("#ConfirmPassword").val()) {
            $("#register_tnc_error").html("Mật khẩu không trùng khớp.");
            showNotice("Lỗi", "Mật khẩu không trùng khớp.")
            $("#Password").val("");
            $("#ConfirmPassword").val("");
            valid = false;
        }
        if (isEmail($("#Password").val())) {
            showNotice("Lỗi", "Email không đúng định dạng.")
            $("#register_tnc_error").html("Email không đúng định dạng.");
            valid = false;
        }
        
        if (captchaResponse == "" || captchaResponse == null) {
            grecaptcha.reset();
            showNotice("Lỗi", "Vui lòng nhập click vào ô kiểm tra")
            $("#help-block").html("Vui lòng click vào ô kiểm tra");
            valid = false;
           
        } 
        return true;
    }
</script>

