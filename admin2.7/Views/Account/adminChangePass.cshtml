@{
    ViewBag.Title = "adminChangePass";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="form">
    <hgroup class="title">
        <h2>Thêm tài khoản. @ViewBag.err</h2>
    </hgroup>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label class="col-md-2 control-label">Email :</label>
            <div class="input col-md-10">
                <input type="text" name="UserName" class="form-control valid" id="UserName" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Pass :</label>
            <div class="input col-md-10">

                @Html.Password("PassWord", null, new { @class = "form-control valid" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Confirm Pass :</label>
            <div class="input col-md-10">
                @Html.Password("PassWord2", null, new { @class = "form-control valid" })
            </div>
        </div>   
        <div class="form-group">
            <label class="col-md-2 control-label"></label>
            <div class="input col-md-10">
                <input type="submit" value="Add User">
            </div>
        </div>
   
    
    }
    Hoặc click vào <a href="/Account/Login">ĐÂY</a> đăng nhập bằng tài khoản <a href="/Account/Login">
        <img src="/images/goo.png" /></a>
    @section Scripts {
        @System.Web.Optimization.Scripts.Render("~/bundles/global.js")
    }
</div>

