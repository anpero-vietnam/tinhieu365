@model ICollection<AuthenticationClientData>

@if (Model.Count == 0)
{
    <div class="message-info">
        Bạn chưa có tài khoản nào trên hệ thống của chúng tôi
    </div>
}
else
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        <ul class="social-icons">
            @foreach (AuthenticationClientData p in Model)
            {

                if (p.AuthenticationClient.ProviderName.Contains("google"))
                {
                <li>
                    <button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account" class="social-icon-color googleplus"></button>
                </li>
                }
                else
                {
                <li>
                    <button type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account" class="social-icon-color facebook">
                      
                    </button>
                </li>
                }
            }
        </ul>
    }
}