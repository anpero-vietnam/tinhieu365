@using Models.Modul.Common
@model ContactItem
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="col-md-12">
    @if (Model != null)
    {

        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-user"></i>Người gửi- @Model.Name
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1"><strong>@Model.Email</strong> @*-  <a class="btn blue" href="/massage/sendMail?mail=@ct.Email">Trả lời</a>*@<a class="btn blue" href="mailto:@Model.Email">Trả lời</a></label>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1"><strong>Điện thoại: @Model.Phone</strong> </label>
                    </div>
                    <div class="form-group">
                        <label>@Html.Raw(Ultil.StringHelper.RemoveHtmlTangs(Model.Contacts).Replace("[br]", "<br>")) </label>
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <a class="btn default" href="/contact/delmsg?id=@Model.Id">Xóa thư</a>
                </div>
            </div>
        </div>
    }
</div>
