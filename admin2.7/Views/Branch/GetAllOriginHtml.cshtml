@model List<Models.Modul.Product.ProductGroup>
@if (Model != null)
{
    <table class="table table-striped table-bordered table-hover table-product">
        <thead>
            <tr>
                <th>Id</th>
                <th style="width: 120px;">Ảnh </th>
                <th>Tên thương hiệu / xuất xứ</th>
                <th class="c1">Miêu tả ngắn</th>
                <th>Thứ tự</th>
                <th>Tác vụ</th>
            </tr>
        </thead>
        <tbody class="productContent">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td class="img-it"><img src="@item.Images"></td>
                    <td class="qtc-productname">@item.Name</td>
                    <td style="max-width:300px;">@Ultil.StringHelper.SubString(300, item.Desc)</td>
                    <td>@item.Rank</td>
                    <td>
                        <button title="sửa" target="_blank" class="btn green filter-cancel btn-del-branch" data-id="@item.Id"><i class="fa fa-trash-o"></i> Xóa</button>
                        <button class="btn red  btnAddProduct btn-update-branch" data-id="@item.Id"><i class="fa fa-pencil"></i> Cập nhật</button>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}

