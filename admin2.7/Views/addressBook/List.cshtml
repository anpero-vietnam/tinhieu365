@using Models;
@model List<Contact>
@{
    ViewBag.Title = "Danh sách khách hàng đã giao dịch";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<form method="get" action="/addressbook/List">
    <div class="portlet light portlet-fit portlet-form bordered">
        <div class="portlet-title">
            <div class="caption font-red-sunglo">
                <span class="caption-subject bold uppercase">
                    <input type="text" name="keyword" class="form-control form-filter" data-target="#findAddr" data-toggle="modal" placeholder="Nhập tên- số điên thoại ...">
                    <input type="hidden" id="st" name="st" />
                </span>
            </div>
            <div class="actions">
                <div class="btn-group">
                    <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-filter"></i>Tìm</button>
                </div>
                <div class="btn-group">
                    <a class="btn btn-sm red dropdown-toggle" href="javascript:;" data-target="#addcustomer" data-toggle="modal">
                        Thêm khách hàng
                    </a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-sm red dropdown-toggle" href="/Export/ExportCustomer">
                        <i class="fa fa-file-excel-o"></i> Export
                        <i class="fa fa-angle-down"></i>
                    </a>
                </div>
            </div>
        </div>

    </div>
</form>
<div id="findaddress" class="form-horizontal ">
    <div class="row">
        <div class="col-md-12">
            <div class="form-grourop"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 table-scrollable">
            @if (Model != null)
            {


                <table class="table table-striped table-bordered table-hover">
                    <tr class="heading"><th>Mã KH</th><th>Tên KH</th><th>Điện thoại</th><th>Email</th><th>Địa chỉ</th><th>Mã số thuế</th><th>Sửa</th></tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="/addressbook/update?id=@item.Id&returlurl=/addressbook"><span>KH</span>@item.Id</a></td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.Mail</td>
                            <td>@Html.Raw(item.Address)</td>
                            <td>@item.TaxCode</td>
                            <td><a href="/addressbook/update?id=@item.Id&returlurl=/addressbook">Cập nhật </a></td>
                        </tr>
                    }

                </table>

            }
            @Html.Raw(ViewBag.paged)
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#st").val(Anpero.CurentStore);
    });

</script>
@Html.Partial("_partial/addAddress")
