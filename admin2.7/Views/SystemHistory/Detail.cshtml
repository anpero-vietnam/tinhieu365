@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="row ">
    <div class="col-md-12">

        <div class="portlet  light bordered">
            <div class="portlet-title">
                <div class="caption">
                    Lịch sử hệ thống
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (ViewData["sn"] != null)
                    {
                        Models.Notify.SysNotify sn = (Models.Notify.SysNotify)ViewData["sn"];
                        <div><strong>@Html.Raw(HttpUtility.HtmlDecode(sn.Title))</strong></div>
                        <div>@Html.Raw(HttpUtility.HtmlDecode(sn.Content))</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
