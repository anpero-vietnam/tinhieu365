@using Models.Modul.Product

@model List<ProductCategory>
@if (Model != null)
{
    <table class="table table-striped table-bordered table-hover table-scrollable">
        <tbody>
            <tr><th>Xóa</th><th>Tên danh mục</th><th>Link</th><th>Cập nhật</th><th colspan="2">Thứ tự</th></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <button onclick="Category.DeleteCat(@item.Id);" class="btn red">
                            <i class="fa fa-trash-o"></i>
                        </button>
                    </td>
                    <td>
                        <div class="parent-name"> @item.Name</div>
                    </td>
                    <td>@item.DefaultLink</td>
                    <td>
                        <button onclick="Category.ShowUpdate(@item.Id,0);" class="btn red update-cat-item"><i class="glyphicon icon-pencil"></i>Cập nhật</button>
                    </td>
                    <td>@item.Rank</td>
                    <td>
                        <a href="javascript:Category.UpdateRank(@item.Id,0);"><i class="fa fa-arrow-up"></i></a>
                        <a href="javascript:Category.UpdateRank(@item.Id,1);"><i class="fa fa-arrow-down"></i></a>
                    </td>
                </tr>
                foreach (var subItem in item.ChildCategory)
                {
                    <tr>
                        <td>
                            <button onclick="Category.DeleteCat(@subItem.Id);" class="btn red">
                                <i class="fa fa-trash-o"></i>
                            </button>
                        </td>
                        <td class="sub-item">@item.Name <i class="fa fa-long-arrow-right"></i> <span class="s-itemName">@subItem.Name</span></td>
                        <td>@subItem.DefaultLink</td>
                        <td>
                            <button onclick="Category.ShowUpdate(@subItem.Id,@item.Id);" class="btn blue"><i class="glyphicon icon-pencil"></i>Cập nhật</button>
                        </td>
                        <td>@subItem.Rank</td>
                        <td class="sub-item">
                            <a href="javascript:Category.UpdateRank(@subItem.Id,0);" class="sub-item"><i class="fa fa-arrow-up"></i></a>
                            <a href="javascript:Category.UpdateRank(@subItem.Id,1);" class="sub-item"><i class="fa fa-arrow-down"></i></a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
}
