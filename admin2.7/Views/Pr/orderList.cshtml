<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-red-sunglo">
            <i class="icon-settings font-red-sunglo"></i>
            <span class="caption-subject bold uppercase"> Quản lý đơn hàng</span>
        </div>
        <div class="actions">
            <div class="btn-group">
                <a class="btn btn-sm green dropdown-toggle" href="javascript:;">
                    <i class="fa fa-file-excel-o"></i> Lưu ra file
                    <i class="fa fa-angle-down"></i>
                </a>

            </div>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="row">
            <div class="col-md-12">
                <div class="tab-content form-horizontal">
                    @Html.Partial("_partial/product/_partialSearchOrder")
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //   BindPROD();
        searchOrder(1);
    })
    $(document).ready(function () {
        $("body").addClass("page-sidebar-closed");
        $(".page-sidebar-menu").addClass("page-sidebar-closed");
        $(".page-sidebar-menu").addClass("page-sidebar-menu-closed");
        var _keybuffer = "";
        $('.spSeria').on("keyup", function (e) {
            var code = e.which;
            var id = this.id;

            if (code == 13) {
                var quantyti = countLine("#" + id, true);
                $('#spquantyti_' + id.replace("spSeria_", "")).val(quantyti);
                UpdatePrOdByseria(id.replace("spSeria_", ""));
            }
        });
        $("#product_name").keyup(function (e) {
            if (e.keyCode == 13) {
                Product.seachProduct();
            }
        });
        $("#product_id").change(function () {
            Product.seachProduct();
        });
        $("#wareHouseId2").change(function () {
            Product.seachProduct();
        });
        $("#prcatSelect").change(function () {
            Product.seachProduct();
        });

        $("#prStatus").change(function () {
            Product.seachProduct();
        });
        $('#table11').click(function () {
            BindPROD();
        });
        $('#seria').on("keyup", function (e) {
            var code = e.which;
            if (code == 13) {
                searchOrder(1);
            }
        });
        $('#odid').on("keyup", function (e) {
            var code = e.which;
            if (code == 13) {
                searchOrder(1);
            }
        });

        $('#ODbeginDate').change(function () {
            searchOrder(1);
        });
        $('#ODendDate').click(function () {
            searchOrder(1);
        });
        $('#makh2').click(function () {
            searchOrder(1);
        });
        $('#odSSt').change(function () {
            searchOrder(1);
        });

    });
    function delAddr(_adid) {
        $.ajax({
            dataType: "text",
            mothod: "post",
            url: "/handler/address.ashx",
            data: { op: "delAddress", adid: _adid },
            success: function (msg) {
                showNotice("Xóa địa chỉ", msg);
            }
        });

    }
</script>

