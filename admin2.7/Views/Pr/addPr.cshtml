@section scripts{
    @Html.Partial("_partial/_ckeditor")    
    <script src="/Scripts/Modul/Small-fileUpload/Small-fileUpload.js"></script>
    <script src="~/Scripts/order/wareHouse.js"></script>    

    <script src="~/Scripts/product/addPr.js"></script>
    <script src="~/assets/plugins/jstree/dist/jstree.min.js"></script>
    <script src="~/Scripts/product/prType.js"></script>
    <link href="~/assets/plugins/jstree/dist/themes/default/style.min.css" rel="stylesheet" />
    <script type="text/javascript" src="/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function () {
            $("body").addClass("page-sidebar-closed");
            $(".page-sidebar-menu").addClass("page-sidebar-closed");
            $(".page-sidebar-menu").addClass("page-sidebar-menu-closed");
            Location.Init();
            Vendor.bindOriginSelect();

        });

        function bindOriginSelect() {
            $.ajax({
                type: "post",
                url: "/handler/product.ashx",
                datatype: "text",
                data: { op: "bindSelectOrigin", st: Anpero.CurentStore },
                success: function (rs) {
                    $("#origin").html(rs);
                }
            });
        }
    </script>
}


