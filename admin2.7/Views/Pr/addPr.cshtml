<div class="portlet light">
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal form-row-seperated">
                <div class="portlet">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo caption-subject bold uppercase" id="lb-addPr">THÊM MỚI SẢN PHẨM</div>
                    </div>
                    <div class="portlet-body form">
                        <ul class="nav nav-tabs tabstorepage ">
                            <li class="active"><a href="#tab_0" data-toggle="tab" id="addPrTab">Thêm mới </a></li>
                            <li class=""><a href="#tab_3" data-toggle="tab" id="table3">Tối ưu tìm kiếm - Script tiếp thị lại</a></li>
                        </ul>
                        <div class="tab-content form-horizontal">
                            <div class="tab-pane active" id="tab_0">
                                @Html.Partial("_partial/product/addProduct")
                                <div class="col-md-4">
                                    @Html.Partial("_partial/product/partial_PrMenuLeft")
                                </div>
                            </div>
                            <div class="tab-pane" id="tab_3">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Script: </label>
                                        <textarea class="form-control" id="scriptCode"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Mô tả ngắn (meta description)</label>
                                        <textarea id="shortDesc" rows="6" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Từ khóa (meta keywords)</label>
                                        <textarea id="keywords" rows="6" class="form-control"></textarea>
                                    </div>
                                    <div class="form-actions right col-md-12">
                                        <button type="button" class="btn red reveicemoney" onclick="Product.Create();"><i class="fa fa-check"></i>Thêm mới</button>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane table-scrollable" id="tab_4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

