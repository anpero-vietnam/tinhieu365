@{
    ViewBag.Title = "addCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    <script src="~/Scripts/News.js"></script>
}

<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-green-sharp">
                <span class="caption-subject bold uppercase">Thêm chủ để</span>
                <span class="caption-helper"></span>
            </div>
        </div>
        <div class="portlet-body">
            <div class="form-body">
                <div class="col-md-12">
                    <div class="form-group col-md-12" style="display:none;">
                        <label class="control-label col-md-3">
                            Thuộc chủ đề chính :
                        </label>
                        <div class="col-md-8 select">
                            <select id="cat" class="form-control">
                                <option value="0">Đang tải chủ đề</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label col-md-3">
                           Tên chủ đề
                            <span class="required" aria-required="true"> * </span>
                        </label>
                        <div class="col-md-8">
                            <input type="text" placeholder="Nhập tên chủ đề" id="subName" class="form-control valid" />

                            <span class="help-block"> Tối đa 50 ký tự </span>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="button" class="btn red button-submit" value="Thêm Chủ đề" onclick="news.addCategory();">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<div class="table table-scrollable">
</div>
<script>
    $(document).ready(function () {
       // bindCat();
        setTimeout(function () {
            bindSub();
            $("#cat").change(function () {
                bindSub();
            });
        }, 1000);

    });

</script>
