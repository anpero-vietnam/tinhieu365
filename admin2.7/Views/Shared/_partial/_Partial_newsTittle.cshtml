
    <div class="col-md-12">
<form action="/news/search" method="get">
<div class="title">  
    <div class="search">     
       <input type="submit" name="submit" value="Tìm tin" class="btn btn-info" role="button" aria-disabled="false">            
    </div>
    <ul class="links">       
        <li id="catContent2">  
            <select id="cat2" name="cat2">
                <option value="1">Đang tải chủ đề</option>
            </select></li>
        <li id="ScatContent2">
            <select id="scat2" name="scat">
                <option value="1">Đang tải chủ đề</option>
            </select></li>         
         <li><select id="block" name="block">
              <option value="1" selected="selected">Tin đang chạy</option>
             <option value="0">Tin bị khóa</option>
            </select></li> 
         <li><select id="order" name="order">
              <option value="0" selected="selected">Mới Tới cũ</option>
             <option value="1">Lượt xem nhiều</option>             
            </select></li> 
    </ul>
</div>
</form></div> 

<script>
    $(document).ready(function () {
        bindCat2();

        setTimeout(function () {
            bindSub2();
            $("#cat2").change(function () {
                bindSub2();
            });
        }, 2000);
    });
    function bindCat2() {
        $.ajax({
            type: "post", url: "/Handler/categoryHandler.ashx", dataType: "text",
            data: { op: "getCatList2" },
            success: function (msg) {
                $("#catContent2").html(msg);

            }
        });
    }
    function bindSub2() {
        var catId = $("#cat2").val();
        $.ajax({
            type: "post", url: "/Handler/categoryHandler.ashx",
            dataType: "text",
            data: { op: "bindSelectArticleCategory", catId: catId },
            success: function (msg) {
                $("#ScatContent2").html(msg);
            }
        });
    }

</script>