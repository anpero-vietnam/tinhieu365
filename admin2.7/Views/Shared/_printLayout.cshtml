        font-weight: bold;
        font-size: 26px;
        background-color: none;
        margin: 25px 0 25px 0;
    }

    .name
    {
        font-size: 24px;
        color: #444;
        padding: 10px 0 10px 0;
    }

    .product td, .product th
    {
        border-bottom: 1px solid #d1d1d1;
        padding: 15px;
        text-align: left;
    }

    .product th
    {
        font-weight: bold;
        background: #666;
        color: #fff;
    }

    .total
    {
        width: 407px;
        text-align: left;
    }
    
    .sign
    {
        position: relative;
        padding: 10px 100px 60px 100px;
    }

    footer
    {
        float: left;
        width: 100%;
        padding: 3rem 0 4rem 0;
        line-height: .6em;
    }

        footer .row
        {
            padding-left: 40px;
            padding-right: 40px;
        }

    @@page
    {
        size: A4;
        margin: 0;
    }

    @@media print
    {
        .page
        {
            margin: 0;
            border: initial;
            border-radius: initial;
            width: initial;
            min-height: initial;
            box-shadow: initial;
            background: initial;
            page-break-after: always;
        }
    }
