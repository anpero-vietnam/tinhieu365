    }

    ul, li
    {
        list-style: none;
    }

    .fa-print
    {
        font-size: 40px;
    }

    .clearfix
    {
        clear: both;
    }

    table
    {
        border-collapse: collapse;
        width: 100%;
    }

    strong
    {
        font-weight: bold;
    }

    .left
    {
        float: left;
    }

    .right
    {
        float: right;
    }

    .info th, .info td
    {
